																		selected: Time.now.year-22 %>

			<div class="left">
				<%= f.label :weight, "Poids actuel (kg)" %>
		  	<%= f.text_field :weight %>
			</div>
			<div class="left">
				<%= f.label :ideal_weight, "Poids idéal (kg)" %>
		  	<%= f.text_field :ideal_weight %>
			</div>

			<div class="clear">&nbsp;</div>

      <%= f.label :email, "E-mail" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Mot de passe" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

