			</div>
			<div class="left">
				<%= f.label :ideal_weight, "Poids idéal (kg)" %>
		  	<%= f.text_field :ideal_weight %>
			</div>

			<div class="clear">&nbsp;</div>

			<div class="left" style="margin-right:45px;">
				<label class="checkbox-inline">
					<input type="radio" name="user[sporty]" id="user_sporty_yes" 
		       value="1" checked> Je fais du sport
				</label>
			</div>
			<div class="left">
				<label class="checkbox-inline">
					<input type="radio" name="user[sporty]" id="user_sporty_not" 
		       value="0"> Je ne fais pas de sport
				</label>
			</div>

			<div class="clear">&nbsp;</div>

			<div style="display: none;">
				<div class="left">
					<label class="checkbox-inline">
						<input type="radio" name="user[getsporty]" id="user_getsporty_yes" 
